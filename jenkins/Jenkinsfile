pipeline {
  agent any
  parameters {
    string(name: 'BUCKET', defaultValue: '', description: 'S3 bucket name')
    string(name: 'KEY', defaultValue: '', description: 'S3 object key')
  }
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Terraform Init') {
      steps { sh 'terraform init -input=false' }
    }
    stage('Terraform Apply') {
      steps {
        sh "terraform apply -var 's3_payload_bucket=${BUCKET}' -var 's3_payload_key=${KEY}' -auto-approve"
      }
    }
    stage('Archive Outputs') {
      steps {
        sh 'terraform output -json > outputs.json'
        archiveArtifacts artifacts: 'outputs.json'
      }
    }
  }
}
